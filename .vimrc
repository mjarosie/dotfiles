set nocompatible " disable vi compatibility
filetype on " filetype detection
filetype plugin on " load plugin file based on the filetype
filetype indent on " load indent file based on the filetype
set t_Co=256 " enable 256-colour mode
syntax enable " enable syntax highlighting

set number
set numberwidth=5
set hlsearch " highlight search as it's being typed
set incsearch " incremental search - show the 'best match so far' as it's being typed
set ruler " always show file info at the bottom
set autoindent
